<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="getDate()" dbms="mssql"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="now" value="now()" dbms="postgresql"/>

    <changeSet id="arclib:1" author="tomasek">
        <createTable tableName="arclib_aip">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" primaryKeyName="arclib_aip_pkey" nullable="false"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="deleted" type="datetime"/>
            <column name="md5" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="arclib_aip_xml">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" primaryKeyName="arclib_aip_xml_pkey" nullable="false"/>
            </column>
            <column name="arclib_aip_id" type="varchar(255)">
                <constraints nullable="false" foreignKeyName="arclib_aip_xml_aip_fk"
                             referencedTableName="arclib_aip" referencedColumnNames="id"/>
            </column>
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="deleted" type="datetime"/>
            <column name="md5" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="zamborsky">
        <createTable tableName="uas_file">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" primaryKeyName="uas_file_pkey" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="content_type" type="varchar(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="zamborsky">
        <addColumn tableName="uas_file">
            <column name="description" type="nclob"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="zamborsky">
        <addColumn tableName="uas_file">
            <column name="created" type="datetime"/>
            <column name="updated" type="datetime"/>
            <column name="deleted" type="datetime"/>
        </addColumn>
    </changeSet>
    <changeSet id="5" author="zamborsky">
        <addColumn tableName="uas_file">
            <column name="indexed_content" type="boolean"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
