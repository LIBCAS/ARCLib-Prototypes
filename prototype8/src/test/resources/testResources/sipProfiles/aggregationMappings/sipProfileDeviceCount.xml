            <fileRegex>^AMD.*xml$</fileRegex>
            <xPath destElemName="deviceId">/mets/amdSec/techMD/mdWrap/xmlData/mix/ImageCaptureMetadata/ScannerCapture/ScannerModel/scannerModelSerialNo</xPath>
